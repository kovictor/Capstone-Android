<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/tool_bar_height"
    android:layout_weight="1"
    android:orientation="horizontal"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_gravity="center">
        <ImageView
            android:id="@+id/menu_tab"
            android:layout_width="@dimen/tool_bar_icon_size"
            android:layout_height="match_parent"
            android:clickable="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/menu"
            android:onClick="createEventTab"/>
        <View
            android:id="@+id/menu_selector"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/selector_height"
            android:layout_alignParentBottom="true"
            android:background="@color/selectorColor"
            />
    </RelativeLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        />

    <RelativeLayout
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:gravity="center">
        <ImageView
            android:id="@+id/map_tab"
            android:layout_width="@dimen/tool_bar_icon_size"
            android:layout_height="match_parent"
            android:clickable="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/gps"
            android:onClick="switchToMap"
            />
        <View
            android:id="@+id/map_selector"
            android:layout_width="match_parent"
            android:layout_height="@dimen/selector_height"
            android:layout_alignParentBottom="true"
            android:background="@color/selectorColor"
            />
    </RelativeLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        />

    <RelativeLayout
        android:layout_width="50dp"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/videos_tab"
            android:layout_width="@dimen/tool_bar_icon_size"
            android:layout_height="match_parent"
            android:clickable="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/squares"
            android:onClick="switchToWebView"/>
        <View
            android:id="@+id/video_selector"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/selector_height"
            android:layout_alignParentBottom="true"
            android:background="@color/selectorColor"
            />
    </RelativeLayout>

</LinearLayout>